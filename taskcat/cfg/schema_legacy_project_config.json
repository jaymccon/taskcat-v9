{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "type": "object",
    "properties": {
        "tests":   {
            "type": "object",
            "patternProperties": {
                "^[a-z/d-]*$": {
                    "type": "object",
                    "properties": {
                        "template_file":    { "type": "string" },
                        "parameter_input":  { "type": "string" },
                        "regions":          {
                            "type": "array",
                            "uniqueItems": true,
                            "items": {
                                "type": "string",
                                "pattern": "^(ap|eu|us|sa|ca|cn|af|me|us-gov)-(central|south|north|east|west|southeast|southwest|northeast|northwest)-[0-9]$"
                            }
                        }
                    },
                    "required": ["template_file"],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "global":  {
            "type": "object",
            "properties": {
                "qsname":  { "type": "string", "pattern": "^[a-z/d-]*$" },
                "owner":   { "type": "string" },
                "regions": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "pattern": "^(ap|eu|us|sa|ca|cn|af|me|us-gov)-(central|south|north|east|west|southeast|southwest|northeast|northwest)-[0-9]$"
                    }
                },
                "package-lambda": { "type": "boolean" },
                "s3bucket": {"type": "string", "pattern": "^[a-z0-9-]*$"}
            },
            "additionalProperties": false,
            "required": ["qsname"]
        }
    },
    "required": [ "global", "tests" ],
    "additionalProperties": false
}
